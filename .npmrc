# Enforce pnpm
engine-strict=true

# Use pnpm's strict peer dependencies (relaxed for PWA plugin webpack requirement)
auto-install-peers=true
strict-peer-dependencies=false

# Hoist dependencies for compatibility with some tools
hoist=true
shamefully-hoist=false

# Faster installs
prefer-frozen-lockfile=true

# Retry on transient registry errors (e.g. npm 403 rate limits in CI)
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
network-concurrency=8
